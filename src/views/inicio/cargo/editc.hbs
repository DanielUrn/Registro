<div class="container p-4">
    <div class="row">
        <div class="col-md-4 my-auto mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="container p-1 text-center"> <h2>CARGO</h2> </div>

                    <form class="row g-3"  action="/inicio/cargo/editc/{{cargo.idcargo}}"  method="POST">
                        
                        <div class="form-group p-1">
                            <div class="col text-center">
                                <label for="validationDefault02" class="form-label">Nombre</label>
                          <input type="text" class="form-control" id="validationDefault01" value="{{cargo.cnombre}}" name="cnombre" placeholder="Nombre" required>
                        </div>
                        </div>
                        
                        
                        <div class="form-group p-1">
                            <div class="col text-center">
                          <label for="validationDefault04" class="form-label">Horario</label>
                          <select class="form-select" id="validationDefault04" name="horario" required>
                            <option selected disabled value="{{cargo.horario}}">Escoger horario</option>
                            {{#each horario}}
                                <option value={{idhorario}}>{{fentrada}} - {{fsalida}}</option>
                                {{/each}}
                          </select>
                        </div>

                        </div>
                        
                        <div class="form-group p-1">
                            <div class="col text-center">
                          <label for="validationDefault04" class="form-label">Departamento</label>
                          <select class="form-select" id="validationDefault04" name="departamento" required>
                            <option selected disabled value="{{cargo.departamento}}">Escoger horario</option>
                            {{#each departamento}}
                                <option value={{iddepartamento}}>{{depnombre}}</option>
                                {{/each}}
                          </select>
                        </div>

                        </div>

                        <div class="form-group p-1 text-center">
                            <div class="col-12">
                          <button class="btn btn-primary" type="submit">Actualizar cargo</button>
                        </div>

                        </div>
</form>
                </div>
            </div>
        </div>
    </div>
</div>