<div class="container p-4">
    <div class="row">
        <div class="col-md-4 my-auto mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="container p-1 text-center"> <h2>CARGO</h2> </div>

                    <form action="/inicio/cargo/ingresarc" method="POST">

                        <div class="form-group p-1">
                            <input type="text" class="form-control" name="cnombre" placeholder="Nombre" autofocus>
                        </div>   

                        <div class="form-group p-1">
                            <input class= "form-control" rows="2"  name="nempleados" placeholder="Número de empleados" disabled>
                        </div>

                        <div class="form-group p-1">
                            <div class="input-group mb-3">
                              <label class="input-group-text" for="inputGroupSelect01">Horarios</label>
                              <select class="form-select" id="inputGroupSelect01" name="horario">
                                <option selected>ESCOGER HORARIO PARA EL CARGO</option>
                                {{#each horario}}
                                <option value={{idhorario}}>{{fentrada}} - {{fsalida}}</option>
                                {{/each}}
                              </select>
                            </div>
                        </div>

                        <div class="form-group p-1">
                            <div class="input-group mb-3">
                              <label class="input-group-text" for="inputGroupSelect01">Departamentos</label>
                              <select class="form-select" id="inputGroupSelect01" name="departamento">
                                <option selected></option>
                                {{#each departamento}}
                                <option value={{iddepartamento}}>{{depnombre}}</option>
                                {{/each}}
                              </select>
                            </div>
                        </div>

                        
                        <div class="form-group text-center p-3">
                            <button class="btn btn-success btn-block">Añadir Cargo</button>
                        </div>                   

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>