<div class="container p-4">
    <div class="row">
        <div class="col-md-4 my-auto mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="container p-1 text-center"> <h2>EMPLEADO</h2> </div>
                    <form action="/inicio/trabajador/editt/{{empleado.idempleado}}" method="POST">

                        <div class="form-group p-1">
                            <input type="text" value="{{empleado.nombre}}"class="form-control" name="nombre" placeholder="Nombre">
                        </div>
                        
                        <div class="form-group p-1">
                            <input type="text" value="{{empleado.cedula}}" class= "form-control" name="cedula" placeholder="Cedula">
                        </div>

                        <div class="form-group p-1">
                            <input type="text" value="{{empleado.correo}}" class= "form-control" name="correo" placeholder="Correo">
                        </div>      
                        
                        <div class="form-group p-1">
                            <input type="text" value="{{empleado.telefono}}" class= "form-control" name="telefono" placeholder="Telefono">
                        </div>                                          

                        <div class="form-group p-1">
                            <textarea class="form-control" rows="2"  name="direccion" placeholder="Direccion">{{empleado.direccion}}</textarea>
                        </div>     

                        <div class="form-group text-center p-3">
                            <button class="btn btn-success btn-block">Actualizar trabajador</button>
                        </div>                   

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>