<div class="container p-4">
    <div class="row">
        <div class="col-md-4 my-auto mx-auto">
            <div class="card">
                <div class="card-header text-center"> <h2>EMPLEADO</h2> </div>
                <div class="card-body">
                    
                    <form class="row g-3"  action="/inicio/trabajador/ingresart"  method="POST">
                        
                        <div class="form-group p-1">
                            <div class="col text-center">
                                <label for="validationDefault02" class="form-label">Nombre</label>
                          <input type="text" class="form-control" id="validationDefault01" name="nombre" placeholder="Nombre" required>
                        </div>
                        </div>
                        
                        <div class="col text-center">
                          <label for="validationDefault02" class="form-label">Cedula</label>
                          <input type="number" class="form-control" id="validationDefault02" name="cedula" placeholder="Cedula" required>
                        </div>
                    
                        <div class="form-group p-1">
                            <div class="col text-center">
                          <label for="validationDefault03" class="form-label">Direccion</label>
                          <input type="text" class="form-control" id="validationDefault03" name="direccion" placeholder="Dirección" required>
                        </div>
                        </div>
                        
                        <div class="form-group p-1">
                            <div class="col text-center">
                          <label for="validationDefault03" class="form-label">Correo</label>
                          <input type="email" class="form-control" id="validationDefault03" name="correo" placeholder="Correo" required>
                        </div>
                        </div>
                        
                        <div class="form-group p-1">
                            <div class="col text-center">
                          <label for="validationDefault04" class="form-label">Cargo</label>
                          <select class="form-select" id="validationDefault04" name="cargo" required>
                            <option selected disabled value="">Escoger cargo</option>
                            {{#each cargo}}
                                <option value={{idcargo}}>{{cnombre}} - {{depnombre}}</option>
                                {{/each}}
                          </select>
                        </div>

                        </div>
                        
                        
                        <div class="form-group p-1">
                            <div class="col text-center">
                          <label for="validationDefault05" class="form-label">Teléfono</label>
                          <input type="number" class="form-control" id="validationDefault05" name="telefono" required>
                        </div>

                        </div>
                        

                        <div class="form-group p-1 text-center">
                            <div class="col-12">
                          <button class="btn btn-primary" type="submit">Añadir trabajador</button>
                        </div>

                        </div>
                        
</form>
                </div>
            </div>
        </div>
    </div>
</div>