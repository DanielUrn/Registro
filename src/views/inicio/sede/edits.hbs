<div class="container p-4">
    <div class="row">
        <div class="col-md-4 my-auto mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="container p-1 text-center"> <h2>SEDE</h2> </div>
                    <form action="/inicio/sede/edits/{{sucursal.idsucursal}}" method="POST">

                        <div class="form-group p-1">
                            <input type="text" value="{{sucursal.snombre}}"class="form-control" name="snombre" placeholder="Nombre">
                        </div>
                        
                        <div class="form-group p-1">
                            <textarea class="form-control" rows="2"  name="direccion" placeholder="Direccion">{{sucursal.direccion}}</textarea>
                        </div>     

                        <div class="form-group text-center p-3">
                            <button class="btn btn-success btn-block">Actualizar sucursal</button>
                        </div>                   

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>